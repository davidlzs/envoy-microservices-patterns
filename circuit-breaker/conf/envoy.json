{
  "listeners": [

    {
      "address": "tcp://0.0.0.0:15001",
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "egress_http",
            "access_log": [
              {
                "path": "/tmp/envoy-traffic"
              }
            ],
            "generate_request_id": true,
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "service",
                  "domains": ["*"],
                  "routes": [
                    {
                      "timeout_ms": 0,
                      "prefix": "/",
                      "auto_host_rewrite": true,
                      "cluster": "httpbin_service",
                      "shadow": {
                        "cluster": "httpbin_2"
                      }
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/tmp/envoy-admin",
    "address": "tcp://127.0.0.1:15000"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "httpbin_2",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://172.20.128.1:8080"
          }
        ]
      },
      {
        "name": "httpbin_service",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://172.20.128.1:8080"
          }
        ]
      }
    ],
    "outlier_detection": {
      "event_log_path": "/deployments/log"   
    }
  }
}